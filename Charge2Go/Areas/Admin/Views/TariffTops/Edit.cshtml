@model Charge2Go.Models.TariffTop

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TariffTop</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="ImageTop" class="control-label"></label>
                <input type="file" name="imageTopFile" class="form-control file" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageCard" class="control-label"></label>
                <input type="file" name="imageCardFile" class="form-control file" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="col-6">
                <img src="@Model.ImageTop" width="100%"
                     style="border-radius:5px; border:1px solid" />
            </div>
            <div class="col-6">
                <img src="@Model.ImageCard" width="100%"
                     style="border-radius:5px; border:1px solid" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
