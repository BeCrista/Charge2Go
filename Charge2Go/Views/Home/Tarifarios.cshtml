@model Charge2Go.Models.ViewModel.TariffVM

@{
    ViewData["Title"] = "Tarifários";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Add your custom CSS file -->
<link rel="stylesheet" href="~/css/stylesTarifarios.css">

@foreach (var tariffTop in Model.TariffTop)
{
    <div class="top_wrapper">
        <img src="@tariffTop.ImageTop" alt="" style="max-width:100%">
        <div class="text_wrapper inner-container mb-4 mt-4">
            <div class="row">
                <div class="col-12 col-md-8" style="color:#4DA541; font-family: Lucida Console; font-size:20px; font-weight:bold;">
                    <p><strong>@tariffTop.Description</strong></p>
                </div>
                <div class="col-12 text-center col-md-4">
                    <img src="@tariffTop.ImageCard" alt="" class="img_card">
                </div>
            </div>
        </div>
    </div>
}

@foreach (var tariffMiddle in Model.TariffMiddle)
{
    <div class="middle_wrapper">
        <div class="tarifas_wrapper inner-container">
            <div class="image_wrapper">
                <img class="desktop_image" src="@tariffMiddle.TariffPriceImage" alt="">
            </div>
            <div class="description">
                <p>@tariffMiddle.TariffPriceDescription</p>
            </div>
            <div class="image_wrapper">
                <img class="desktop_image" src="@tariffMiddle.TariffScheduleImage" alt="">
            </div>
            <div class="description">
                <p>@tariffMiddle.TariffScheduleDescription</p>
            </div>
        </div>
        <img src="/Images/charge2go_tariffMiddle_separator.png" alt="" style="max-width: 100%">
        <div class="campanha_wrapper inner-container">
            <div class="d-md-flex d-sm-block">
                <div class="flex-grow-1">
                    <h1 class="title">Campanha Promocional</h1>
                    <div class="description">
                        <p>@tariffMiddle.TariffCampaignDescription</p>
                    </div>
                </div>
                <div class="justify-content-center justify-content-md-left">
                    <img class="desktop_image mt-md-n5 m-auto" src="@tariffMiddle.TariffCampaignImage" alt="">
                </div>
            </div>
        </div>
    </div>
}

<div class="top-image-text-container d-flex">
    <div class="inner-inner-container align-self-center position-relative">
        @foreach (var middleSection in Model.TariffBottom)
        {
            <div class="position-absolute top-50 start-50 translate-middle text-center text-white">
                <h1 class="text-white">
                    <p><strong>@middleSection.TariffSolutionTitle</strong></p>
                    <p>@middleSection.TariffSolutionSubtitle</p>
                </h1>
                <a href="/" title="">
                    <div class="btn btn-white mt-2">
                        Saiba mais
                    </div>
                </a>
            </div>
            <img src="@middleSection.TariffSolutionImage" alt="Middle Image" class="img-fluid mt-3" />
        }
    </div>
</div>
