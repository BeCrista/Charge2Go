@model Charge2Go.Models.ViewModel.HomePageVM

@{
    ViewData["Title"] = "Home Page";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Add your custom CSS file -->
<link rel="stylesheet" href="~/css/styles.css">

<div class="homepage-slider">
    <div id="demo" class="carousel slide" data-bs-ride="carousel">

        <!-- Indicators/dots -->
        <div class="carousel-indicators">
            @for (int i = 0; i < Model.HomePageSlider.Count; i++)
            {
                <button type="button" data-bs-target="#demo" data-bs-slide-to="@i" @(i == 0 ? "class=active" : "")></button>
            }
        </div>

        <!-- The slideshow/carousel -->
        <div class="carousel-inner">
            @for (int i = 0; i < Model.HomePageSlider.Count; i++)
            {
                var slider = Model.HomePageSlider[i];
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img src="@slider.ImageSlider" alt="Slider Image" class="d-block w-100">
                    <div class="carousel-caption">
                        <h1>@slider.TitleSlider</h1>
                        <p>@slider.SubTitleSlider</p>
                        <a class="btn btn-primary" asp-area="" asp-action="Tarifarios">Saiba mais</a>
                    </div>
                </div>
            }
        </div>

        <!-- Left and right controls/icons -->
        <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</div>

<div class="top-image-text-container d-flex">
    <div class="inner-inner-container align-self-center position-relative">
        @foreach (var middleSection in Model.HomePageMiddle)
        {
            <div class="position-absolute top-50 start-50 translate-middle text-center text-white">
                <h1 class="text-white">
                    <p><strong>@middleSection.ImageMiddleTitle</strong></p>
                    <p>@middleSection.ImageMiddleSubtitle</p>
                </h1>
                <a href="/" title="">
                    <div class="btn btn-white mt-2">
                        Saiba mais
                    </div>
                </a>
            </div>
            <img src="@middleSection.ImageMiddle" alt="Middle Image" class="img-fluid mt-3" />
        }
    </div>
</div>

